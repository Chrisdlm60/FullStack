{% extends 'base.html.twig' %}

{% block title %}Orders index{% endblock %}

{% block body %}
    <h1>Orders index</h1>

    <div class="container">
        <div class="table-responsive-sm">
            <table class="table table-striped table-hover table-dark">
                <thead>
                    <thead>
                        <tr>
                            <th scope="col"> Order ID </th>
                            <th scope="col"> Customer ID </th>
                            <th scope="col"> Employee ID </th>
                            <th scope="col"> Company name </th>
                            <th scope="col"> Contact name </th>
                            <th scope="col"> Phone </th>
            
                            <th>action <a href="{{ path('app_orders_new') }}"><i class="fa fa-solid fa-plus"></i></a></th>
                        </tr>
                    </thead>
                </thead>
                <tbody>
                {% for Order in order %}
                    <tr>
                        <td scope="row">{{ Order.orderid }}</td>
                        <td>{{ Order.customerid }}</td>
                        <td>{{ Order.employeeid }}</td>
                        <td>{{ Order.customers.getName() }}</td>
                        <td>{{ Order.customers.getNameContact() }}</td>
                        <td>{{ Order.customers.getPhone() }}</td>
                        <td>
                            <a href="{{ path('app_orders_show', {'orderid': Order.orderid}) }}"><i class="fa fa-solid fa-eye"></i></a>
                            <a href="{{ path('app_orders_edit', {'orderid': Order.orderid}) }}"><i class="fa fa-solid fa-pen"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
