{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <h1>Orders</h1>

    <div class="container">
        <div class="table-responsive-sm">
            <table class="table table-striped table-hover table-dark">
                <tbody>
                    <tr>
                        <th>Orderid</th>
                        <td>{{ order.orderid }}</td>
                    </tr>
                    <tr>
                        <th>Customerid</th>
                        <td>{{ order.customerid }}</td>
                    </tr>
                    <tr>
                        <th>Employeeid</th>
                        <td>{{ order.employeeid }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col offset-2">
                <a class="btn btn-secondary" href="{{ path('app_orders_index') }}">back to list</a>
            </div>
            <div class="col offset-1">
                <a class="btn btn-primary" href="{{ path('app_orders_edit', {'orderid': order.orderid}) }}">edit</a>
            </div>
            <div class="col offset-1">
                {{ include('orders/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
