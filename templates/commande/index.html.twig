{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cmd_date</th>
                <th>Cmd_fact</th>
                <th>Cmd_date_pmnt</th>
                <th>Cmd_etat_pmnt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.cmdDate ? commande.cmdDate|date('Y-m-d') : '' }}</td>
                <td>{{ commande.cmdFact }}</td>
                <td>{{ commande.cmdDatePmnt ? commande.cmdDatePmnt|date('Y-m-d') : '' }}</td>
                <td>{{ commande.cmdEtatPmnt }}</td>
                <td>
                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}">Create new</a>
{% endblock %}
