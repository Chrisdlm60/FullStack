{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
    <h1>Products index</h1>

    <div class="container">
    <div class="table-responsive-sm">
        <table class="table table-striped table-hover table-dark">
            <thead>
                <tr>
                    <th>Productid</th>
                    <th>Productname</th>
                    <th>Suppliername</th>
                    <th>IdCategory</th>
                    <th>Quantity</th>
                    <th>UnitePrice</th>
                    <th>UnitsInStock</th>
                    <th>UnitsOnOrder</th>
                    <th>ReorderLevel</th>
                    <th>Discontinued</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.Productid }}</td>
                    <td>{{ product.Productname }}</td>
                    <td>{{ product.IdCategory }}</td>
                    <td>{{ product.Quantity }}</td>
                    <td>{{ product.UnitePrice }}</td>
                    <td>{{ product.UnitsInStock }}</td>
                    <td>{{ product.UnitsOnOrder }}</td>
                    <td>{{ product.ReorderLevel }}</td>
                    <td>{{ product.Discontinued }}</td>
                    <td>
                        <a href="{{ path('app_products_show', {'Productid': product.Productid}) }}">show</a>
                        <a href="{{ path('app_products_edit', {'Productid': product.Productid}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>

    <a href="{{ path('app_products_new') }}">Create new</a>
{% endblock %}
