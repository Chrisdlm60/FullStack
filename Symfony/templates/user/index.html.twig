{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <div class="container">
        <div class="table-responsive-sm">
            <table class="table table-striped table-hover table-dark">
                <thead>
                    <tr>
                        <th>Id</th> 
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Password</th>
                        <th>actions <a href="{{ path('app_user_new') }}"><i class="fa-solid fa-plus"></i></a></th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.password }}</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}"><i class="fa-solid fa-eye"></i></a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-pen"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
